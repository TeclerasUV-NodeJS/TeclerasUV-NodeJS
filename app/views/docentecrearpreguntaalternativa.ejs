<% include header %>
		<div class="row row-centered">
			<div class="col-sm-8 col-centered">
				<form action="crearpreguntaalternativa" method="post">
					<label for="">Nombre Pregunta</label><br/>
					<input id="nombrepregunta" type="text" placeholder="Ingrese aqui por favor el nombre de la pregunta" size="40"><br/>
					<label for="">Pregunta:</label><br/>
					<input id="pregunta" type="text" placeholder="Ingrese aqui por favor la pregunta" size="40"><br/>
					<label for="">Imagen</label><br/>
					<input type="file" id="comprobarImagenes" onchange="checkExt()"><br/>
					
					<label for="">URL Video</label><br/>
					<input id="url_video" type="text" name="" id="URL" placeholder="Ingrese aqui una URL" size="40" onchange="ValidarURL()"><br/>
					<label for="">Respuestas:</label><br/>
					<table id="tableId" class="table table-striped" style="width:100%">
						<tr>
			 				<td id="1">Respuestas</td>
							<td id="2">Correcta</td> 
							<td id="3">Seleccionar</td>
						</tr>	
					</table>
					<input class="btn btn-default" type="button" value="Agregar" onclick="agregar()">
					<input class="btn btn-default" type="button" value="Editar" onclick="editar()">
					<input class="btn btn-default" type="button" value="Quitar" onclick="quitar()"><br/>
					<label for="">Explicacion respuesta correcta:</label><br/>
					<textarea name="" id="explicacion" cols="40" rows="5" placeholder="Ingrese aqui la respuesta a la pregunta"></textarea><br/>
					<input class="form-control" type="submit" value="Crear Pregunta">
					<input class="btn btn-default" type="button" value="Volver" onclick="goBack()">
				</form>	
			</div>
		</div>
	</div>
	
	<style>
	textarea {resize:none;}
	</style>

<% include footer %>